<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EJS Home</title>

    <link rel="stylesheet" href="/index.css">
    <!-- <script src="../../GetData.js"></script> -->
    <!-- <script type="text/javascript" src="/GetData.js"></script> -->

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</head>
<body>
    <header>
        <%-include('../partials/Header'); %>
    </header>

    <div class="data">
        <table>
            <thead>
                <tr class="tr">
                    <td class="th">No</td>
                    <td class="th">Name</td>
                    <td class="th">Email</td>
                </tr>
            </thead>
                
            <tbody id="parent">
                
            </tbody>
        </table>
    </div>


    <script>
         async function GetData()
        {
            let data = [];
            data = await axios.get('http://localhost:5700/data');
            data = data.data;
            console.log(data);
            
            for (let i = 0; i < data.length; i++)
            {
                let parent = document.getElementById('parent').insertRow(i);
                let resolveData = await data[i];
               
                for (let key in resolveData) 
                {
                    console.log(key);
                   let cell =  parent.insertCell();
                   cell.innerHTML = resolveData[key];  
                }
                
                                
            }
            
        }
        GetData();
    </script>
</body>
</html>

